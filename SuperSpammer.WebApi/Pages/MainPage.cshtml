@page
@model SuperSpammer.WebApi.Pages.MainPage

<div class="form-container" align="center">
<h2>Super Spammer</h2>

<form method="post" style="background:#fff; padding:30px; border-radius:10px; box-shadow:0 4px 10px rgba(0,0,0,0.1); width:300px; text-align:center;">
    <div class="mb-3">
        <label asp-for="EmailAddressInputValue" class="form-label">Enter email address:</label>
        <input asp-for="EmailAddressInputValue" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="SelectedNumber" class="form-label">Select spam count number:</label>
        <select asp-for="SelectedNumber" class="form-select" asp-items="Model.NumberOptions">
            <option value="">-- Choose a number --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <ul class="nav">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
        </li>
    </ul>
</form>
</div>

@if (Model.Message != null)
{
    <div class="alert alert-success mt-3">
        @Model.Message
    </div>
}